<% @items.each do |item| %>
  <%= item.title %>
  <%= number_to_currency(
    item.price,
    unit: item.currency,
    separator: ",",
    delimiter: ".",
    format: "%n %u") %>
    <span id="quantity-display"><%= item.selections.count %></span>
    <%= link_to "select", item_selections_path(item, order_id: (@order ? @order.id : '')), method: :post %>
    <% if item.selections.count > 0 %>
      <%= link_to "remove", destroy_all_item_selections_path(item), method: :delete %>
    <% end %>
    <br>
<% end %>
