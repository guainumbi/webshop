<% @items.each do |item| %>
  <%= item.title %>
  <%= number_to_currency(
    item.price,
    unit: item.currency,
    separator: ",",
    delimiter: ".",
    format: "%n %u") %>
    <%= link_to "select", item_selections_path(item), method: :post %>
    <% item.selections.each do |selection| %>
      <%= link_to "remove", item_selection_path(item, selection), method: :delete %>
    <% end %>
    <br>
<% end %>
