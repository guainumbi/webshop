<% @orders.each do |order| %>
    <% order.items.each do |item| %>
    <%= item.title %>
    <%= number_to_currency(
      item.price,
      unit: item.currency,
      separator: ",",
      delimiter: ".",
      format: "%n %u") %>
      <button>
        <%= link_to (item.selected ? "remove" : "select"), item_selections_path(item), method: :post %>
      </button>
      <br>
    <% end %>
<% end %>
